<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pial.tourmate.eventDetailsTablayout.EventDetailsActivity$PlaceholderFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eventExpenseListView"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddEventExpense"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_gravity="end|bottom"
        app:srcCompat="@drawable/pluss"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/eventExpenseListView"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are no Event Deatails"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/textViewExpense" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/briefcase"
        android:layout_below="@+id/textViewExpense"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageViewExpense" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_buttom"
        android:text="Add Expense"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewExpense"
        android:layout_marginTop="24dp"
        android:id="@+id/btnAddEventExpense"

        />

</RelativeLayout>
